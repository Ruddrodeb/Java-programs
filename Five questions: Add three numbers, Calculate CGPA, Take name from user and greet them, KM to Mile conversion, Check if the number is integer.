import java.util.Scanner;

public class PracticeSet {
    public static void main(String[] args) {
//         Question number one: add three numbers
        int a = 5;
        int b = 6;
        int c = 7;
        int sum = a + b + c;
        System.out.println(sum);

//        Question number two: calculate cgpa (using float data type)
        float subject1 = 45;
        float subject2 = 95;
        float subject3 = 65;
        float cgpa = (subject1 + subject2 + subject3)/30;
        System.out.println(cgpa);

//        Question number three: Take name from user and greet them
        System.out.println("What is your name?");
        Scanner sc = new Scanner(System.in);
        String name = sc.next();
        System.out.println("Hello" + name + "Have a nice day!");

//        Question number four: KM to Mile conversion
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the KM number:");
        double m = sc.nextFloat();
        double conversion = (m*0.621371);
        System.out.println(conversion);

//        Question number five: Check if the number is integer
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter the number:");
        System.out.println(sc.hasNextInt());
    }
}
