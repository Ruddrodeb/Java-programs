public class Variable_argument {
    static int sum ( int...arr){
        int result =0;
        for(int a:arr){
            result +=a;
        }
        return result;
    }
    public static void main(String[] args) {
        System.out.println("Welcome to Varargs");
        System.out.println("The sum of 1, 2, 3, 4, 5 is: " + sum(1,2,3,4,5));
    }
}
